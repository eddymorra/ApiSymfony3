{# src/OC/PlatformBundle/Resources/views/Default/index.html.twig #}

{% extends "::base.html.twig" %}

{% block body %}

  <h3>Liste de articles</h3>

  <a href="{{ path('oc_platform_add') }}" class="btn btn-primary">Ajouter un article</a><br>

  <ul>
    {% for article in articles %}
    <li>
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <a href="{{ path('oc_platform_view', {'slug': article.id}) }}">
            {{ article.title }}
          </a>
        </div>
        <div class="panel-body">
          {{ article.leadingArt }}
        </div>

        <!-- List group -->
        <ul class="list-group">
          <li class="list-group-item">Par {{ article.createdBy }} le {{ article.createdAt|date("m/d/Y") }}</li>
        </ul>
      </div>
    {% endfor %}
  </ul>

{% endblock %}